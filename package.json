{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Estudo de construção de api Rest node js",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest  --colors  --passWithNoTests --forceExit  --runInBand --detectOpenHandles",
    "test:unit": "jest --colors  --runInBand --passWithNoTests -c jest-unit-config.js --forceExit",
    "test:integration": "jest --colors   --runInBand --passWithNoTests  -c jest-integration-config.js --forceExit",
    "test:staged": "jest --colors --runInBand --detectOpenHandles  --passWithNoTests --forceExit ",
    "test:ci": "jest  --coverage --colors --noStackTrace --passWithNoTests --runInBand --forceExit"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemirson/clean-node-api.git"
  },
  "author": "Gemirson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gemirson/clean-node-api/issues"
  },
  "homepage": "https://github.com/gemirson/clean-node-api#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-cli": "^26.1.0",
    "lint-staged": "^10.2.11",
    "standard": "^14.3.4",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.4",
    "joi-password-complexity": "^4.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.5.9",
    "mongose": "^0.0.2-security",
    "password-validator": "^5.0.3",
    "validator": "^13.1.1"
  }
}
